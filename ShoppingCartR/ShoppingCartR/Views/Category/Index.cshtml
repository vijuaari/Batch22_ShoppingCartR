@model List<Category>
<figure>
    <blockquote class="blockquote">
        <p class="mb-0">This is Category page.This page would be used by Admin to add any new Category for books.</p>

    </blockquote>
    <figcaption class="blockquote-footer">
        This is Admin, <cite title="Source Title">AdminRole required</cite>
    </figcaption>
</figure>


<a asp-controller="Category" asp-action="Create">Create Category</a>
<div> </div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">CategoryId</th>
            <th scope="col">CategoryName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr class="table-success">
               
                <td>@i.CategoryId</td>
                <td>@i.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id ="@i.CategoryId">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@i.CategoryId">Delete</a>
                </td>
                
            </tr>
        }

    </tbody>
</table>
